<Window x:Class="RPA_ULTRA_CORE.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:RPA_ULTRA_CORE.Views.Controls"
        xmlns:viewmodels="clr-namespace:RPA_ULTRA_CORE.ViewModels"
        mc:Ignorable="d"
        Title="RPA Ultra Core - Dashboard"
        Height="900"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.DataContext>
        <viewmodels:DashboardViewModel/>
    </Window.DataContext>

    <materialDesign:Card UniformCornerRadius="15" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:ColorZone Grid.Row="0"
                                      Mode="PrimaryDark"
                                      Padding="16"
                                      materialDesign:ElevationAssist.Elevation="Dp4"
                                      CornerRadius="15 15 0 0">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button ToolTip="Minimizar"
                                Click="MinimizeWindow"
                                Foreground="White"
                                Padding="6"
                                Margin="0,0,8,0"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}">
                            <materialDesign:PackIcon Kind="WindowMinimize"/>
                        </Button>
                        <Button ToolTip="Maximizar"
                                Click="MaximizeWindow"
                                Foreground="White"
                                Padding="6"
                                Margin="0,0,8,0"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}">
                            <materialDesign:PackIcon Kind="WindowMaximize"/>
                        </Button>
                        <Button ToolTip="Fechar"
                                Click="CloseWindow"
                                Foreground="White"
                                Padding="6"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}">
                            <materialDesign:PackIcon Kind="Close"/>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChartBox"
                                                 Width="32"
                                                 Height="32"
                                                 VerticalAlignment="Center"
                                                 Foreground="White"/>
                        <TextBlock Text="RPA ULTRA CORE - Dashboard"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   Foreground="White"/>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- Conteúdo Principal -->
            <Grid Grid.Row="1" Background="{DynamicResource MaterialDesignDarkBackground}">
                <!-- Wave Background -->
                <controls:AnimatedWaveBackground Panel.ZIndex="0" Opacity="0.3"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
                    <StackPanel Margin="30">

                        <!-- Título da Seção -->
                        <TextBlock Text="Métricas em Tempo Real"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,30"/>

                        <!-- Grid de Progresso Circular -->
                        <Grid Margin="0,0,0,40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <controls:AnimatedCircularProgress Grid.Column="0"
                                                              Title="CPU"
                                                              Progress="{Binding CpuUsage}"
                                                              Color="#9C27B0"
                                                              Height="250"
                                                              Margin="10"/>

                            <controls:AnimatedCircularProgress Grid.Column="1"
                                                              Title="Memória"
                                                              Progress="{Binding MemoryUsage}"
                                                              Color="#673AB7"
                                                              Height="250"
                                                              Margin="10"/>

                            <controls:AnimatedCircularProgress Grid.Column="2"
                                                              Title="Disco"
                                                              Progress="{Binding DiskUsage}"
                                                              Color="#CDDC39"
                                                              Height="250"
                                                              Margin="10"/>
                        </Grid>

                        <!-- Estatísticas em Cards -->
                        <Grid Margin="0,0,0,40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:Card Grid.Column="0"
                                               Margin="10"
                                               Padding="20"
                                               Background="{DynamicResource PrimaryHueMidBrush}">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="CheckCircle"
                                                           Width="48"
                                                           Height="48"
                                                           HorizontalAlignment="Center"
                                                           Foreground="White"/>
                                    <TextBlock Text="{Binding CompletedTasks}"
                                             FontSize="36"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             Foreground="White"
                                             Margin="0,10,0,0"/>
                                    <TextBlock Text="Tarefas Completas"
                                             FontSize="14"
                                             HorizontalAlignment="Center"
                                             Foreground="White"
                                             Opacity="0.8"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Column="1"
                                               Margin="10"
                                               Padding="20"
                                               Background="#673AB7">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="ProgressClock"
                                                           Width="48"
                                                           Height="48"
                                                           HorizontalAlignment="Center"
                                                           Foreground="White"/>
                                    <TextBlock Text="{Binding PendingTasks}"
                                             FontSize="36"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             Foreground="White"
                                             Margin="0,10,0,0"/>
                                    <TextBlock Text="Tarefas Pendentes"
                                             FontSize="14"
                                             HorizontalAlignment="Center"
                                             Foreground="White"
                                             Opacity="0.8"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Column="2"
                                               Margin="10"
                                               Padding="20"
                                               Background="#CDDC39">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="Speedometer"
                                                           Width="48"
                                                           Height="48"
                                                           HorizontalAlignment="Center"
                                                           Foreground="#212121"/>
                                    <TextBlock Text="{Binding AverageSpeed}"
                                             FontSize="36"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             Foreground="#212121"
                                             Margin="0,10,0,0"/>
                                    <TextBlock Text="Velocidade Média (ms)"
                                             FontSize="14"
                                             HorizontalAlignment="Center"
                                             Foreground="#212121"
                                             Opacity="0.7"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Column="3"
                                               Margin="10"
                                               Padding="20"
                                               Background="#FF5722">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="AlertCircle"
                                                           Width="48"
                                                           Height="48"
                                                           HorizontalAlignment="Center"
                                                           Foreground="White"/>
                                    <TextBlock Text="{Binding Errors}"
                                             FontSize="36"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             Foreground="White"
                                             Margin="0,10,0,0"/>
                                    <TextBlock Text="Erros"
                                             FontSize="14"
                                             HorizontalAlignment="Center"
                                             Foreground="White"
                                             Opacity="0.8"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>

                        <!-- Gráfico de Barras -->
                        <materialDesign:Card Padding="20"
                                           Margin="10,0,10,20">
                            <StackPanel>
                                <TextBlock Text="Desempenho Semanal"
                                         FontSize="20"
                                         FontWeight="SemiBold"
                                         Foreground="White"
                                         Margin="0,0,0,20"/>

                                <controls:AnimatedBarChart Height="300"
                                                         Data="{Binding WeeklyData}"
                                                         Labels="{Binding WeeklyLabels}"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Botão de Simulação -->
                        <Button Content="Simular Novos Dados"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="50"
                                FontSize="16"
                                Command="{Binding SimulateDataCommand}"
                                Margin="10,20,10,20"
                                Background="{DynamicResource PrimaryHueMidBrush}"/>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </materialDesign:Card>
</Window>
